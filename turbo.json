{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["turbo-cache-key.json", "test/lib/**"],
  "pipeline": {
    "pnpm-cache-hack": {
      "inputs": ["package.json", "pnpm-lock.yaml"],
      "outputMode": "new-only",
      "outputs": ["**/node_modules/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputMode": "new-only",
      "outputs": ["dist/**"]
    },
    "test-unit": {
      "dependsOn": ["build"],
      "outputMode": "new-only"
    },
    "test-dev": {
      "dependsOn": ["build"],
      "outputMode": "new-only"
    },
    "test-cli": {
      "dependsOn": ["build"],
      "outputMode": "new-only"
    },
    "test-e2e": {
      "dependsOn": ["build"],
      "outputMode": "new-only"
    },
    "test-next-local": {
      "dependsOn": ["build"],
      "outputMode": "new-only"
    },
    "test": {
      "dependsOn": ["build"],
      "outputMode": "new-only"
    }
  }
}
