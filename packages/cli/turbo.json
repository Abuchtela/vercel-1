{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "pipeline": {
    "pnpm-cache-hack": {
      "inputs": ["package.json", "pnpm-lock.yaml"],
      "outputMode": "new-only",
      "outputs": ["node_modules/**", "../../node_modules/**"]
    },
    "build": {
      "outputs": [
        "dist/**",
        "src/util/constants.ts",
        "src/util/dev/templates/*.ts"
      ]
    }
  }
}
